<section class="cart py-16">
    <% if(session.cart){ %> 
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="img/cart-black.png" alt="">
            <h1 class="font-bold text-2xl ml-4">Order Summary</h1>
        </div>
        <div class="pizza-list">
         <% for (let pizza of Object.values(session.cart.items)){ %> 
            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%= pizza.item.image %> " alt="">
                <div class="ml-4 flex-1">
                    <h1><%= pizza.item.name %> </h1>
                    <span><%= pizza.item.size %></span>
                </div>
                <span class="flex-1"><%= pizza.qty %> </span>
                <span class="font-bold text-lg"><%= pizza.item.price *pizza.qty %> </span>
            </div>
           <% } %>  
        </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Ammount</span>
                <span class="ammount text-2xl font-bold ml-2 "><%= session.cart.totalPrice %> </span>
            </div>
            <div>
                <form action="" class="mt-12">
                    <input type="text" class="border border-gray-400 p-2 w-1/2 mb-4" placeholder="Phone Number">
                    <input type="text" class="border border-gray-400 p-2 w-1/2" placeholder="Address">
                   <div> <button type="submit" class=" rounded-full btn-primary text-white font-bold mt-6 px-6 py-2"> Order Now</button></div>
                </form>
            </div>
            <a href="" class="inline-block curser-pointer rounded-full btn-primary text-white font-bold mt-6 px-6 py-2">Login to continue</a>
        </div>
    </div>
<% }else { %> 
    <div class="empty-cart">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2 ">Cart Empty</h1>
            <p class="text-gray-500 text-lg mb-12  ">YO havent orderd pizza yet <br>
                try placing pizza
            </p>
            <img class="w-2/5 mx-auto mb-12" src="img/empty-cart.png" alt="cart empty">
            <a href="/" class="rounded-full inline-block px-6 py-2 btn-primary text-white font-bold mb-12">Go back</a>
        </div>
    </div>
<%  }%>
</section> 